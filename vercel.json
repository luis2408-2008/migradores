{
  "version": 2,
  "framework": "vite",
  "buildCommand": "./vercel-build.sh",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "regions": ["cdg1"],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}